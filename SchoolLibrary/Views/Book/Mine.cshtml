@model IEnumerable<BookServiceModel>
@{
    ViewData["Title"] = "My Books";

}
<h2 class="text-center">@ViewData["Title"]</h2>

<hr />

@if (Model.Any() == false)
{
    <h3 class="text-center">You have no books yet!</h3>       
}

<div class="row">
    @foreach (var item in Model)
    {
        <partial name="_BookPartial" model="@item" />
    }
</div>